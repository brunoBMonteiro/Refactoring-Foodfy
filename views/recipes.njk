{% extends "layout.njk" %}

{% block head %} 
    <link rel="stylesheet" href="/recipes.css">
    <title>Receitas Foodfy</title>
{% endblock %}
    
    {% block header %}
        <header>
            <div id="image-logo">
                <img src="/images/logo.png" alt="Logo">
            </div>

            <div id="links">
                <a href="/about">Sobre</a>
                <a href="/">Receitas</a>
            </div>
        </header>
    {% endblock %}

    {% block cards %}
        <section class="cards">
            
            {% for item in items %}
                <div class="card" id="{{item.image}}">
                    <div class="card_image-container">
                        <img src="{{item.image}}" alt="{{item.title}}">
                    </div>

                    <div class="card_product">
                        <h2>{{item.title}}</h2>
                    </div>

                    <div class="card_author">
                        <h3>{{item.author}}</h3>
                    </div>
                </div>
            {% endfor %}

        </section>
    {% endblock %}

    {% block footer %}
        <footer>
            <div class="footer">
                <p>Todos direitos reservados, receitas Foodfy.</p>
            </div>
        </footer>
    {% endblock %}

    
    {% block script %} 
        <script src="/scripts.js"></script>
    {% endblock %}